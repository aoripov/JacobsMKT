<div class="container">
  <div class="col-xs-12 col-md-12">
  	<div class="thumbnail thumbnail-container">
  	<%= form_for(@item) do |f| %>  
    	<div class="field"> 
      <label>Name</label> 
      <%= f.text_field :name , class: "form-control"%>
      <br/>
      <label>Price</label>
      <div class="input-group">
      	<div class="input-group-addon">&#8364</div>
      	<%= f.number_field :price, :class => 'form-control', :step => 'any', value: "0.0"%>
     	</div>
      <br/>
      <label>Description</label>
      <%= f.text_area :description, class: "form-control" %>
      <br/>
      <label>Picture</label>

      <% unless @item.image_url(:thumb).nil? %>
      <div class="thumbnail">
        <%= image_tag @item.image_url(:thumb), :class => "img-thumbnail"%>
      </div>  
      <br/>
      <% end %> 

      <%= f.file_field :image %>
      <br/>
      <label>Category</label>
      <%= f.select(:category_id, Category.all.collect {|c| [c.name, c.id]}, {}, {:class => "form-control"} ) %>
      <br/>
      <%= f.submit "Update", :class => 'btn btn-primary btn-sm' %> 
      <a href="/items/<%= @item.id %>/delete" class="btn btn-danger btn-sm" role="button">Delete</a>
    </div>
  <% end %>
  	</div>
  </div>
</div>
