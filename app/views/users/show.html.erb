<!DOCTYPE html>
  <% if logged_in? && eligible_for_viewing?(@user) %>
  <h1 class="text-center">User information</h1>
  <div id="datatable" class="container">
    <table class="table table-bordered">  
        <thead>  
          <tr>  
            <th>Option</th>  
            <th>Value</th>  
          </tr>  
        </thead>  
        <tbody>  
          <tr>  
            <td>Name</td>  
            <td><%= @user.name %></td>  
          </tr>  
          <tr>  
            <td>Email</td>  
            <td><%= @user.email %></td>  
          </tr>  
        </tbody>  
    </table>
    <a href="/user/items" class="btn btn-primary btn-sm" role="button">My Items</a>
    <a href="/items/new" class="btn btn-primary btn-sm" role="button">Add Product</a>
  </div>
  <% else %>
    You don't have the necessary authorization to view this web page.
  <% end %>
</html>