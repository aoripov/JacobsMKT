<!DOCTYPE html>
  <h1 class="text-center">User information</h1>
  <div id="datatable" class="container">
    <table class="table table-bordered">  
        <thead>  
          <tr>  
            <th>Option</th>  
            <th>Value</th>  
          </tr>  
        </thead>  
        <tbody>  
          <tr>  
            <td>Name</td>  
            <td><%= @user.name %></td>  
          </tr>  
          <tr>  
            <td>Email</td>  
            <td><%= @user.email %></td>  
          </tr>  
        </tbody>  
    </table>
    <a href="/items/user/<%= @user.id %>" class="btn btn-primary btn-sm" role="button">My Items</a>
    <a href="/items/new" class="btn btn-primary btn-sm" role="button">Add Product</a>
    <% if admin? %> <!--admin-->
    <a href="/admin" class="btn btn-primary btn-sm" role="button">Administration panel</a>
    <% end %>
  </div>
</html>