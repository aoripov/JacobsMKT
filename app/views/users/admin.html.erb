<div class="container">
  <div class="col-xs-12 col-md-12">
  	<div class="thumbnail thumbnail-container">
      <h1 class="text-center">Users</h1>
      <table class="table table-bordered">  
          <thead>  
            <tr>  
              <th>Name</th>  
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th>Action</th> 
            </tr>  
          </thead>  
          <tbody> 
            <% @users.each do |user| %> 
            <tr>  
              <td><%= user.name %></td>  
              <td><%= user.username %></td>  
              <td><%= user.email %></td>
              <td><%= roleToString(user.role) %></td>
              <td><%= link_to 'Add item', '/admin/' + user.id.to_s + '/items/new', :class => "btn btn-primary"%></td>  
            </tr>  
            <% end %>  
          </tbody>  
      </table>
  	</div>
  </div>
</div>